<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="#ffffffff"
    tools:context="com.gameapps.alex.singlethreadgame.activities.MainMenuActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/world" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="510dp"
            android:layout_height="135dp"
            app:srcCompat="@drawable/throw_it" />

        <Button
            android:scaleType="centerCrop"
            android:id="@+id/campaign_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="campaign mode"
            />

        <Button
            android:id="@+id/vs_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campaign_mode"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.02"
            android:scaleType="centerCrop"
            android:text="vs friends via facebook" />

    </LinearLayout>

</RelativeLayout>
