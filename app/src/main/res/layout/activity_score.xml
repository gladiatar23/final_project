<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.gameapps.alex.singlethreadgame.activities.ScoreActivity">


    <Button
        android:id="@+id/backFromScore"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:text="back"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Best Scors"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_above="@+id/scoresVertical"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/scoresVertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/backFromScore"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"></LinearLayout>
</RelativeLayout>
